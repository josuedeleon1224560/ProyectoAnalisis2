@using Microsoft.AspNetCore.Identity;
@inject UserManager<AppUser> UserManager
 
    @{
        var userName = User.Identity.Name;
        var userId = "";
        var userCUI = "";
        if (!string.IsNullOrEmpty(userName))
        {
            var user = await UserManager.FindByNameAsync(userName);
            if (user != null)
            {
                userId = user.Id;
                userCUI = user.CUI;
            }
        }



    }

