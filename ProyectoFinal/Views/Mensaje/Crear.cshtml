@using ProyectoFinal.ViewModels
@model CreateMessageViewModel

@{
    ViewData["Title"] = "Crear Mensaje";
}

<h2>Crear Mensaje</h2>

<form asp-controller="Mensaje" asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="Contenido"></label>
        <textarea asp-for="Contenido" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Contenido" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar Mensaje</button>
</form>