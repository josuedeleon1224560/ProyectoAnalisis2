    string estilos = "~/css/General.css";
}

@section Estilos
    {
    <link rel="stylesheet" type="text/css" href="@estilos" />
}

@{
    ViewData["Title"] = "Mensajes del Usuario";
}
    <style>
        /* Estilo del contenedor principal */
        .message-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        /* Estilo de cada mensaje */
        .message {
            background-color: #f7f7f7;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            display: flex;
            justify-content: space-between;
        }

        /* Estilo del contenido del mensaje */
        .message-content {
            flex: 1;
            font-size: 16px;
        }

        /* Estilo del estado del mensaje */
        .message-status {
            background-color: #007bff;
            color: #fff;
            padding: 5px 10px;
            border-radius: 3px;
            font-size: 14px;
        }

        /* Estilo del botón */
        .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 10px 0;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

    </style>

    <div class="container">
        <div class="sub-body">
            <h2>Mensajes del Usuario: @Model.Usuario.UserName</h2>
            <div class="message-container">
            @foreach (var mensaje in Model.MensajesUsuario)
            {
                    <div class="message">
                        <div class="message-content">@mensaje.Contenido</div>
                        <div class="message-status">@mensaje.Estado</div>
                    </div>
            }
            </div>
            <div class="mt-4">
                <a asp-controller="Mensaje" asp-action="SeleccionarUsuario" class="btn btn-primary">Seleccionar Otro Usuario</a>
            </div>
        </div>
    </div>
