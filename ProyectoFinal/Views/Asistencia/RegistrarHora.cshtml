@using ProyectoFinal.ViewModels
@model AsistenciaViewModel

@{
    ViewData["Title"] = "Asistencia";
    string estilos = "~/css/General.css";
}

@section Estilos
    {
    <link rel="stylesheet" type="text/css" href="@estilos" />
}

@section Header
{
    <header class="asistencia-header">
        <h2>Control de asistencia</h2>
    </header>
}
<h2>Registro de Asistencia</h2>

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success">@TempData["MensajeExito"]</div>
}

@if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger">@TempData["MensajeError"]</div>
}

<div class="actions-asist">

    <form asp-action="RegistrarHora" method="post">
        <div class="form-group-1">
            <label asp-for="UserId">CUI del Usuario:</label>
            <input asp-for="UserId" class="form-control" />
        </div>

        <div class="form-group-2">
            <label>Seleccionar tipo de registro:</label>
            <select asp-for="EsEntrada" class="form-control">
                <option value="true">Hora de Entrada</option>
                <option value="false">Hora de Salida</option>
            </select>

            <div class="actions-btn">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>

        </div>

    </form>
</div>
    </div>