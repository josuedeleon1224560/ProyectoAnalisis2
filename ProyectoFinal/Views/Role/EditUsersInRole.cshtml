@using Microsoft.AspNetCore.Identity;
@using ProyectoFinal.ViewModels
@model List<UserRoleViewModel>
@inject UserManager<AppUser> UserManager

@{
    var userName = User.Identity.Name;
    var userId = "";
    var userCUI = "";
    if (!string.IsNullOrEmpty(userName))
    {
        var user = await UserManager.FindByNameAsync(userName);
        if (user != null)
        {
            userId = user.Id;
            userCUI = user.CUI;
        }
    }

}

@{
    ViewData["Title"] = "Editar Usuario en Rol";
    string estilos = "~/css/General.css";
}

@section Estilos
    {
    <link rel="stylesheet" type="text/css" href="@estilos" />
}

    @{
        var roleId = ViewBag.roleId;
    }
    <style>
    .rol-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f7f7f7;
    }

    /* Estilo para el sub-contenedor del formulario */
    .rol-sub-body {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
        width: 400px;
        text-align: center;
    }

    /* Estilo para el encabezado del formulario */
    .rol-header {
        margin-bottom: 20px;
    }

        .rol-header h2 {
            font-size: 24px;
        }

    /* Estilo para la lista de usuarios */
    .rol-user-list .rol-user-item {
        margin-bottom: 10px;
    }

    /* Estilo para los botones */
    .rol-buttons {
        margin-top: 20px;
    }

        .rol-buttons .rol-btn {
            margin-right: 10px;
        }

    /* Estilo para el botón primario */
    .rol-btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    /* Estilo para el botón secundario */
    .rol-btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }
    </style>
@section Header
    {
    <div class="container">
        <header class="header">
            <nav class="nav-bar">
                <a class="logo" href="#">CONSULTING S.A</a>
                <button class="nav-toggle">
                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512">
                        <!--! Font Awesome Free 6.4.2 by fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                        <style>
                            svg {
                                fill: #ffffff
                            }</style>
                        <path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z" />
                    </svg>
                </button>
                <ul class="nav-menu">
                    <li class="nav-item"><a asp-area="" class="nav-link" asp-controller="Home" asp-action="Privacy">Home</a></li>
                    <li class="nav-item"><a asp-area="" class="nav-link" asp-controller="User" asp-action="Index">Usuarios</a></li>
                    <li class="nav-item"><a asp-area="" class="nav-link" asp-controller="Role" asp-action="ListRoles">Roles</a></li>
                    <li class="nav-item"><a asp-area="" class="nav-link" asp-controller="Account" asp-action="Register">Registrar</a></li>
                    <li class="nav-item"><a asp-area="" class="nav-link" asp-controller="Mensaje" asp-action="Index">Bandeja</a></li>
                    <li class="nav-item"><a asp-area="" class="nav-link" asp-controller="Mensaje" asp-action="SeleccionarUsuario">Mensajes</a></li>
                    <li class="nav-item"><a asp-area="" class="nav-link" asp-controller="Nomina" asp-action="Seleccionar">Nomina</a></li>
                    <li class="nav-item"><a asp-area="" class="nav-link" asp-controller="Nomina" asp-action="Usuarios">Detalles</a></li>
                    <li class="nav-item"> <a asp-area="" class="nav-link" asp-controller="Account" asp-action="Logout">Cerrar Sesion</a> </li>
                </ul>
            </nav>
        </header>
    }
    <div class="rol-container">
        <div class="rol-sub-body">
            <form method="post">
                <div class="rol-form-container">
                    <div class="rol-header">
                        <h2>Añadir o remover usuarios de este Rol</h2>
                    </div>
                    <div class="rol-user-list">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                            <div class="rol-user-item">
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input asp-for="@Model[i].IsSelected" />
                                <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                            </div>
                    }
                    </div>
                    <div class="rol-buttons">
                        <input type="submit" value="Actualizar" class="rol-btn rol-btn-primary" />
                        <a asp-action="EditRole" asp-route-id="@roleId" class="rol-btn rol-btn-secondary">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
